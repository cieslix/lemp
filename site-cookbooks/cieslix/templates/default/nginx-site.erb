<%- @servers.each do |s| %>
server {
        <%- if  s[:ip].nil? || s[:ip].empty? %>
            <%- if s[:ssl] == true %>
        listen <%= s[:port] %> ssl;
            <%- else %>
        listen <%= s[:port] %>;
            <%- end %>
        <%- else %>
            <%- if s[:ssl] == true %>
        listen <%= "#{s[:ip]}:#{s[:port]}" %> ssl;
            <%- else %>
        listen <%= "#{s[:ip]}:#{s[:port]}" %>;
            <%- end %>
        <%- end %>
        server_name <%= s[:server_name] %><%= s[:server_alias].join(' ') %>;
        <%- unless  @root.nil? || @root.empty? %>
        root <%= @root %>;
        <%- end %>
        <%- @error_page.each do |page| %>
            error_page <%= page[:code] %> <%= page[:handler] %>;
        <%- end %>
        <%- unless  @static.nil? || @static.empty? %>
            <%- @static.each do |item| %>
            location <%= item[:location] %> {
                root <%= item[:root] %>;
            }
            <%- end %>
        <%- end %>
        <%- if ! @index.nil? && ! @index.empty? %>
            index <%= @index %>;
        <%- end %>
        autoindex off;
        <%- if s[:ssl] == true %>
            include <%= s[:ssl_include_path] %>;
        <%- end %>
        location ~ (^/(app/\|includes/\|lib/\|/pkginfo/\|var/\|report/config.xml)\|/\.svn/\|/\.git/\|/.hta.+) {
            deny all;
        }
        location / {
            try_files $uri $uri/ /index.php?$args;
            access_log off;
            expires max;
        }
        location ~ \.(jpeg\|jpg\|gif\|png\|css\|js\|ico\|swf)$ {
            try_files $uri $uri/ @proxy; # look for static files in root directory and ask backend if not successful
            expires max;
            access_log off;
        }
        location @proxy {
        <%- if ! @socket.nil? && ! @socket.empty? %>
            fastcgi_pass  unix:<%= @socket %>;
        <%- end %>
        <%- if ! @inet_socket.nil? && ! @inet_socket.empty? %>
            fastcgi_pass  <%= @inet_socket %>;
        <%- end %>
        }
        <%- if s[:redirect].nil? || s[:redirect].empty? %>
        location <%= s[:location] %> {
        <%- if ! @socket.nil? && ! @socket.empty? %>
            fastcgi_pass  unix:<%= @socket %>;
        <%- end %>
        <%- if ! @inet_socket.nil? && ! @inet_socket.empty? %>
            fastcgi_pass  <%= @inet_socket %>;
        <%- end %>
        <%- if ! @fastcgi_index.nil? && ! @fastcgi_index.empty? %>
            fastcgi_index <%= @fastcgi_index %>;
        <%- end %>
            include fastcgi_params;
        <%- if s[:ssl] == true %>
            fastcgi_param  HTTPS on;
        <%- end %>
        <%- @fastcgi_param.each do |f| %>
            fastcgi_param <%= f[:name] %> <%= f[:value] %>;
        <%- end %>
        <%- if @fastcgi_intercept_errors == true %>
            fastcgi_intercept_errors on;
        <%- end %>
        <%- unless @fastcgi_read_timeout.nil? || @fastcgi_read_timeout.empty? %>
            fastcgi_read_timeout <%= @fastcgi_read_timeout %>;
        <%- end %>
            fastcgi_keep_conn on;
            expires off;
        }
        <%- else %>
        rewrite  ^ <%= s[:redirect] %>://$server_name$request_uri? permanent;
        <%- end %>
        access_log /var/log/nginx/<%= @site_name %>.access.log;
        error_log  /var/log/nginx/<%= @site_name %>.error.log;
}
<%- end %>
